<Page x:Class="正方系统抢课辅助.ChooseLessonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ChooseLessonPage">

    <Grid>
        <StackPanel Orientation="Vertical">
        <TextBlock FontSize="20" >请选择你要选的课：</TextBlock>   
        <ComboBox Width="150" Height="27" HorizontalAlignment="Left"></ComboBox>
            <Button Content="一键选课" Width="150" HorizontalAlignment="Left" Height="25" Margin="0,12,0,0"></Button>
            <TextBlock Text="选课状态："></TextBlock>
            <ListView Name="listView_Status" Height="199"></ListView>
        </StackPanel>
    </Grid>
</Page>
